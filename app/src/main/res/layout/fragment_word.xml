<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.artyomefimov.pocketdictionary.viewmodel.wordviewmodel.WordViewModel"/>
    </data>
    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:mutableVisibility="@{viewModel.getLoadingVisibility()}"
                    android:layout_centerInParent="true"/>

            <RelativeLayout
                    android:id="@+id/original_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                <Button
                        android:id="@+id/submit_original_word"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_ok"
                        android:layout_alignParentEnd="true"/>


                <EditText
                        android:id="@+id/original_word_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="43dp"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:padding="4dp"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/submit_original_word"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_translations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/original_word"/>

            <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_add_translation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_add_word"/>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>