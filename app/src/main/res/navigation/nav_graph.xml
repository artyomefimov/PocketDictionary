<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools = "http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination = "@id/wordListFragment">
    <fragment
            android:id="@+id/wordListFragment"
            android:name="com.artyomefimov.pocketdictionary.view.wordlist.WordListFragment"
            android:label="WordListFragment"
            tools:layout="@layout/fragment_list_words">
        <action
                android:id="@+id/action_wordListFragment_to_wordFragment"
                app:destination="@id/wordFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
            android:id="@+id/wordFragment"
            android:name="com.artyomefimov.pocketdictionary.view.word.WordFragment"
            android:label="WordFragment"
            tools:layout="@layout/fragment_word">
        <argument
                android:name="dictionaryRecord"
                app:argType="com.artyomefimov.pocketdictionary.model.DictionaryRecord"
                app:nullable="true" />
        <action
                android:id="@+id/action_wordFragment_to_editTranslationDialog"
                app:destination="@id/editTranslationDialog" />
        <action
                android:id="@+id/action_wordFragment_to_confirmDeletionDialog"
                app:destination="@id/confirmDeletionDialog" />
    </fragment>
    <fragment
            android:id="@+id/editTranslationDialog"
            android:name="com.artyomefimov.pocketdictionary.view.dialogs.EditTranslationDialog"
            android:label="EditTranslationDialog"
            tools:layout="@layout/dialog_edit_translation">
        <argument
                android:name="translation"
                app:argType="string" />
        <argument
                android:name="position"
                app:argType="integer"
                android:defaultValue="-1" />
    </fragment>
    <fragment
            android:id="@+id/confirmDeletionDialog"
            android:name="com.artyomefimov.pocketdictionary.view.dialogs.ConfirmDeletionDialog"
            android:label="ConfirmDeletionDialog"
            tools:layout="@layout/dialog_confirm_deletion">
        <argument
                android:name="translation"
                app:argType="string" />
    </fragment>
</navigation>